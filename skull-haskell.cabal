name:                skull-haskell
version:             0.0.0.1
-- synopsis:            
-- description:         
homepage:            https://github.com/korczis/skull-haskell
license:             MIT
license-file:        LICENSE
author:              Tomas Korcak
maintainer:          korczis@gmail.com
-- copyright:           
category:            Language
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  default-language: Haskell2010
  hs-source-dirs:   src/Lib
  exposed-modules:
    Algs.Algs
    Cli.Cli
    Core.Core
    Math.Math
    Net.Net
    Net.WebServer
    Parallel.Parallel
    Phys.Phys
    Playground.Playground
  build-depends:
      base >= 4 && <= 5
      , accelerate
      -- , iproute
      , scotty
  -- TODO: Add -WError
  ghc-options:         -Wall -threaded
  extensions: 

executable Bmi
  main-is:             Bmi/Bmi.hs
  build-depends:
    skull-haskell
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >= 4 && <= 5
  ghc-options:         -Wall
  hs-source-dirs:      src/Apps
  default-language:    Haskell2010

executable FastPing
  main-is:             FastPing/FastPing.hs
  build-depends:
    skull-haskell
  build-depends:       base >= 4 && <= 5
  ghc-options:         -Wall
  hs-source-dirs:      src/Apps
  default-language:    Haskell2010